doctype html
html(ng-app='fscApp' ng-init="nodeId=#{nodeId}")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no")
        title= title
        link(rel='stylesheet', href='/node_static/stylesheets/common.css')
        link(rel='stylesheet', href='/node_static/stylesheets/bootstrap/css/bootstrap.css')
        link(rel='stylesheet', href='/node_static/stylesheets/fontawesome/css/font-awesome.min.css')
    body
        div.vote(ng-controller="PlanNodeCtrl")
            div.row.plan-info
                div.col-xs-7
                    div.col-xs-6
                        img(src="/assets/img/index/ic_launcher.png")
                    div.col-xs-6
                        div.mrgb25(ng-bind="node.teacherName")
                        div(ng-bind="node.nodeTypeName")
                div.col-xs-5
                    div.mrgb25(ng-bind="node.subjectName")
                    div(ng-bind="node.nodeTime")
            p.halving-line
            form.form-horizontal.mrgt20
                div.form-group
                    div.col-xs-4.control-label.text-right 名称：
                    div.col-xs-8.control-label.text-left
                        p(ng-bind="node.nodeName")
                div.form-group(ng-if="node.nodeType==5")
                    div.col-xs-4.control-label.text-right 类型：
                    div.col-xs-8.control-label.text-left
                        p(ng-bind="node.fileType")
                div.form-group(ng-if="node.nodeType==2||node.nodeType==3")
                    div.col-xs-4.control-label.text-right 内容：
                    div.col-xs-8.control-label.text-left
                        div(ng-include="'/node_static/javascripts/app/view/plan_nodes/menu-recursion.html'",ng-init="submenu = links")
                div.form-group(ng-if="node.nodeType==1")
                    div.col-xs-4.control-label.text-right 内容：
                    div.col-xs-8.control-label.text-left
                        ul.nav.nav-pills.nav-stacked
                            li(ng-repeat="link in node.osrCwScoVOList")
                                div.col-xs-8
                                    a {{link.scoName}}
                                div.col-xs-4
                                    a 播放
                div.form-group(ng-if="node.nodeType==4")
                    div.col-xs-4.control-label.text-right 图片：
                    div.col-xs-8.row
                        img.col-xs-4(ng-repeat="pic in picture track by $index" src="{{pic}}")
                div.form-group(ng-if="node.nodeType==4")
                    div.col-xs-4.control-label.text-right 语音：
                    div.col-xs-8
                        audio(controls="controls",src="{{node.voice}}")
                    div.form-group(ng-if="node.nodeType==4")
                    div.col-xs-4.control-label.text-right 内容：
                    div.col-xs-8.control-label.text-left
                        p(ng-bind="node.imgText")
                div.col-xs-12.bottom-btn.fix(ng-if="node.nodeType==4")
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 已阅
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 已完成
                div.col-xs-12.bottom-btn.fix(ng-if="node.nodeType==2||node.nodeType==3")
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 查看作业
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 分析作业
                div.col-xs-12.bottom-btn.fix(ng-if="node.nodeType==5")
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 收藏
                    div.col-xs-6.bottom-btn
                        button(class="btn btn-default btn-block col-xs-6") 下载
        script(src='/node_static/bower_components/angular/angular.min.js')
        script(src='/node_static/javascripts/app/ctrl/fsc/plan_node.js')
        script(src='/node_static/javascripts/app/services/msg.js')


